<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="done">

        <item name="colorBackground">#94ffab</item>
        <item name="textColor">#000</item>
        <item name="iconLeft">@drawable/donestyle</item>
        <item name="strokeWidth">3dp</item>
        <item name="strokeColor">#000</item>
        <item name="length">LONG</item>
    </style>


    <style name="error">

        <item name="colorBackground">#FF0000</item>
        <item name="textColor">#000</item>
        <item name="iconLeft">@drawable/errorstyle</item>
        <item name="strokeWidth">3dp</item>
        <item name="strokeColor">#000</item>
        <item name="length">LONG</item>

    </style>

    <style name="canceled">

        <item name="colorBackground">#FFFFFF</item>
        <item name="textColor">#000</item>
        <item name="strokeColor">#000</item>
        <item name="length">SHORT</item>

    </style>
</resources>
