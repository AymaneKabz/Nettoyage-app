<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/ligne_image_task"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ligne_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usernme"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ligne_image_task"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ligne_task_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="TextView"

        app:layout_constraintStart_toEndOf="@+id/ligne_image_task"
        app:layout_constraintTop_toBottomOf="@+id/ligne_task" />

    <TextView
        android:id="@+id/ligne_task_fin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="TextView"

        app:layout_constraintStart_toEndOf="@+id/ligne_image_task"
        app:layout_constraintTop_toBottomOf="@+id/ligne_task_start" />

</androidx.constraintlayout.widget.ConstraintLayout>